    tBrown.forward(randint(1,10))
        

#Declare Winner

if(tRed.ycor()>tGreen.ycor() and tRed.ycor()>tCyan.ycor() and tRed.ycor()>tViolet.ycor() and tRed.ycor()>tBrown.ycor()):
    print("Red Turtle is the Winner")
    for i in range(90):
        tRed.right(4)
        tRed.shapesize(3)
elif(tGreen.ycor()>tRed.ycor() and tGreen.ycor()>tCyan.ycor() and tGreen.ycor()>tViolet.ycor() and tGreen.ycor()>tBrown.ycor()):
    print("Green Turtle is the Winner")
    for i in range(90):
        tGreen.right(4)
        tGreen.shapesize(3)
elif(tViolet.ycor()>tGreen.ycor() and tViolet.ycor()>tCyan.ycor() and tViolet.ycor()>tRed.ycor() and tViolet.ycor()>tBrown.ycor()):
    print("Violet Turtle is the Winner")
    for i in range(90):
        tViolet.right(4)
        tViolet.shapesize(3)
elif(tCyan.ycor()>tGreen.ycor() and tCyan.ycor()>tRed.ycor() and tCyan.ycor()>tViolet.ycor() and tCyan.ycor()>tBrown.ycor()):
    print("Cyan Turtle is the Winner")
    for i in range(90):
        tCyan.right(4)
        tCyan.shapesize(3)
else:
    print("Brown Turtle is the Winner")
    for i in range(90):
        tBrown.right(4)
        tBrown.shapesize(3)



turtle.done()
